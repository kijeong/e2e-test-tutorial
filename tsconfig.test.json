{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["jest", "node"],
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/domain/**/*.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*.ts"
  ]
}
